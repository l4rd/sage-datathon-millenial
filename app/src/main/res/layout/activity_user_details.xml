<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.53">

        <ImageButton
            app:srcCompat="@drawable/twitter"
            android:layout_marginStart="14dp"
            android:id="@+id/imageButtonTwitter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageButtonFacebook"
            android:layout_toEndOf="@+id/imageButtonFacebook"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:onClick="twitterClick"/>

        <ImageButton
            app:srcCompat="@drawable/linkedin"
            android:layout_marginStart="14dp"
            android:id="@+id/imageButton4"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageButtonTwitter"
            android:layout_toEndOf="@+id/imageButtonTwitter"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:onClick="linkedinClick"/>

        <ImageButton
            app:srcCompat="@drawable/instagram"
            android:id="@+id/imageButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageButton4"
            android:layout_toEndOf="@+id/imageButton4"
            android:layout_marginStart="14dp"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:onClick="instagramClick"/>

        <ImageView
            app:srcCompat="@drawable/default_person"
            android:id="@+id/imageView2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_height="110dp"
            android:layout_width="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            app:srcCompat="@drawable/facebook"
            android:id="@+id/imageButtonFacebook"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:onClick="facebookClick"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="92dp" />

        <TextView
            android:text="John smith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageButtonTwitter"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="My Company:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView4"
            android:layout_toStartOf="@+id/imageView2" />

        <TextView
            android:text="@string/userdetailscompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:text="read more "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="#0047b3"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toEndOf="@+id/imageButton4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="@string/userdetails"
            android:padding="0dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView" />

    </RelativeLayout>


</LinearLayout>