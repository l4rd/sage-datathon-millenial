<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            app:srcCompat="@drawable/default_person"
            android:id="@+id/imageView2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_height="110dp"
            android:layout_width="110dp"/>

        <TextView
            android:text="John smith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginStart="15dp"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <ImageButton
            app:srcCompat="@drawable/facebook"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginStart="17dp"
            android:id="@+id/imageButtonFacebook"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:onClick="facebookClick"/>

        <ImageButton
            app:srcCompat="@drawable/twitter"
            android:layout_marginStart="14dp"
            android:id="@+id/imageButtonTwitter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageButtonFacebook"
            android:layout_toEndOf="@+id/imageButtonFacebook"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:onClick="twitterClick"/>

        <ImageButton
            app:srcCompat="@drawable/linkedin"
            android:layout_marginStart="14dp"
            android:id="@+id/imageButton4"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageButtonTwitter"
            android:layout_toEndOf="@+id/imageButtonTwitter"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:onClick="linkedinClick"/>

        <ImageButton
            app:srcCompat="@drawable/instagram"
            android:id="@+id/imageButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageButton4"
            android:layout_toEndOf="@+id/imageButton4"
            android:layout_marginStart="14dp"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:onClick="instagramClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_marginTop="27dp"
            android:id="@+id/textView4"
            android:text="@string/userdetails" />
    </RelativeLayout>


</LinearLayout>