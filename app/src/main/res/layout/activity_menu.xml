<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/tyne2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sagelogo"
        android:layout_marginTop="24dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:text="My account"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_width="300dp"
        android:background="#BB41A940"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="101dp"
        android:onClick="myaccountClick"/>

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:background="#BB41A940"
        android:textColor="@android:color/white"
        android:text="my mentors"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="11dp"
        android:onClick="mentorsClick"/>

    <Button
        android:text="Business live"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:background="#BB41A940"
        android:textColor="@android:color/white"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:text="Alerts (0)"
        android:layout_height="wrap_content"
        android:id="@+id/alertButton"
        android:layout_width="300dp"
        android:background="#BB41A940"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button"
        android:enabled="false"
        android:onClick="alertsClick"/>

</RelativeLayout>