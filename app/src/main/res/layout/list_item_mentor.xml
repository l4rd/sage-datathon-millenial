<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/default_person"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:id="@+id/imageViewmentor"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:id="@+id/textViewMentorName"
        android:layout_alignTop="@+id/imageViewmentor"
        android:layout_toEndOf="@+id/imageViewmentor"
        android:textSize="18sp"
        android:textColor="#000000" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMentorSerial"
        android:textColor="#000000"
        android:layout_below="@+id/textViewMentorName"
        android:layout_alignStart="@+id/textViewMentorName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMentorSerial"
        android:layout_alignStart="@+id/textViewMentorSerial"
        android:id="@+id/textViewmentorphone"
        android:textColor="#000000" />
</RelativeLayout>